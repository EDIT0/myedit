<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="movieinfomodel"
            type="com.kotlin.k_bindingadapter_recyclerview3.data.Movie_info2" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                main_rcv_image="@{movieinfomodel.poster_path}"
                error="@{@drawable/ic_launcher_foreground}"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="@{movieinfomodel.title}"
                    android:layout_margin="7dp"/>

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:rating="@{movieinfomodel.vote_average/2}"
                    android:stepSize="0.1"
                    android:layout_marginLeft="7dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="@{movieinfomodel.release_date}"
                    android:layout_marginLeft="7dp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="bottom"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</layout>